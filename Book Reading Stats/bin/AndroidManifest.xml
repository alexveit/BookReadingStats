<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="alex.veit.bookreadingstats"
    android:versionCode="20"
    android:versionName="3.0" >

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_book"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="alex.veit.bookreadingstats.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="alex.veit.bookreadingstats.BookActivity"
            android:label="@string/title_activity_book"
            android:parentActivityName="alex.veit.bookreadingstats.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="alex.veit.bookreadingstats.MainActivity" />
        </activity>
        <activity
            android:name="alex.veit.bookreadingstats.SessionsActivity"
            android:label="@string/title_activity_sessions"
            android:parentActivityName="alex.veit.bookreadingstats.BookActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="alex.veit.bookreadingstats.BookActivity" />
        </activity>

        <activity
            android:name="alex.veit.bookreadingstats.ImportActivity"
            android:label="@string/title_activity_import"
            android:parentActivityName="alex.veit.bookreadingstats.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="alex.veit.bookreadingstats.MainActivity" />
        </activity>
        <activity
            android:name="alex.veit.bookreadingstats.TotalsActivity"
            android:label="@string/title_activity_totals"
            android:parentActivityName="alex.veit.bookreadingstats.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="alex.veit.bookreadingstats.MainActivity" />
        </activity>
        <activity
            android:name="alex.veit.bookreadingstats.PieChartActivity"
            android:label="@string/title_activity_pie_chart"
            android:parentActivityName="alex.veit.bookreadingstats.TotalsActivity"
            android:screenOrientation="landscape" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="alex.veit.bookreadingstats.TotalsActivity" />
        </activity>
    </application>

</manifest>