package alex.veit.bookreadingstats;

import android.app.Activity;
import android.content.Intent;
import android.os.Bundle;
import android.support.v4.app.NavUtils;
import android.view.Menu;
import android.view.MenuItem;
import android.view.View;
import android.view.WindowManager;
import android.widget.ArrayAdapter;
import android.widget.EditText;
import android.widget.ListView;
import android.widget.TextView;

public class SessionsActivity extends Activity {

	private ArrayAdapter<String> _adapter;
	private ListView _myListView;
	private EditText _mySesText;
	private BookStats _bs;

	@Override
	protected void onCreate(Bundle savedInstanceState) {
		super.onCreate(savedInstanceState);
		setContentView(R.layout.activity_sessions);
		// Show the Up button in the action bar.
		getActionBar().setDisplayHomeAsUpEnabled(true);
		_bs = (BookStats) super.getIntent()
				.getParcelableExtra(BookStats._CLASS);
		((TextView) findViewById(R.id.textViewBookName))
				.setText(this._bs._name);
		this._myListView = (ListView) findViewById(R.id.listViewSessions);
		this._mySesText = (EditText) findViewById(R.id.editTextSessions);
		this._adapter = new ArrayAdapter<String>(this,
				android.R.layout.simple_list_item_1, this._bs._sessions);
		this._myListView.setAdapter(this._adapter);
		this._adapter.notifyDataSetChanged();

		super.getWindow().setSoftInputMode(
				WindowManager.LayoutParams.SOFT_INPUT_STATE_ALWAYS_HIDDEN);

	}

	public void cancel(View view) {
		onBackPressed();
	}

	@Override
	public boolean onCreateOptionsMenu(Menu menu) {
		// Inflate the menu; this adds items to the action bar if it is present.
		getMenuInflater().inflate(R.menu.activity_sessions, menu);
		return true;
	}

	@Override
	public boolean onOptionsItemSelected(MenuItem item) {
		switch (item.getItemId()) {
		case android.R.id.home:
			// This ID represents the Home or Up button. In the case of this
			// activity, the Up button is shown. Use NavUtils to allow users
			// to navigate up one level in the application structure. For
			// more details, see the Navigation pattern on Android Design:
			//
			// http://developer.android.com/design/patterns/navigation.html#up-vs-back
			//
			NavUtils.navigateUpFromSameTask(this);
			return true;
		}
		return super.onOptionsItemSelected(item);
	}

	public void addSession(View view) {
		if (this._mySesText.getText().toString().length() == 4) {
			int minute = Integer.parseInt(_mySesText.getText().toString()
					.substring(2, 4));
			if (minute < 60) {
				int hour;
				String text = this._mySesText.getText().toString()
						.substring(0, 2);
				this._bs._sessions.add((this._bs._sessions.size() + 1) + "# - "
						+ this._mySesText.getText().toString().substring(0, 2)
						+ ":"
						+ this._mySesText.getText().toString().substring(2, 4));
				this._adapter.notifyDataSetChanged();
				this._mySesText.setText("");
				hour = Integer.parseInt(text);
				this._bs._hours += hour;
				this._bs._minutes += minute;
				if (this._bs._minutes > 59) {
					this._bs._hours++;
					this._bs._minutes -= 60;
				}
			}
		}
	}

	public void done(View view) {
		
			Intent returnIntent = new Intent(this, SessionsActivity.class);
			returnIntent.putExtra(BookStats._CLASS, this._bs);
			super.setResult(Activity.RESULT_OK, returnIntent);
			super.finish();
		
	}
}
